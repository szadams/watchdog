# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ServerController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Authentication
GET     /login                      controllers.Login.login

# Servers
GET     /servers                      controllers.ServerController.index
GET     /servers/create               controllers.ServerController.create
GET     /servers/save               controllers.ServerController.save
GET     /servers/details/:id          controllers.ServerController.details(id: String)